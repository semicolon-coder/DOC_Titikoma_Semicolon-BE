<%- include('../parts/header.ejs', { title: 'Detail Produk - TITIKOMA' }) %>
<%- include('../parts/navbar.ejs') %>
<%- include('../parts/sidebar.ejs', { position: 'product' }) %>

<div class="pt-[90px] h-auto shadow-md py-3 lg:ml-72">
    <div class="mx-[30px] text-gray-800 font-light">
        <a href="/product" class="text-lg font-bold hover:underline hover:underline-offset-1">Produk</a>
        >
        <a href="/product/<%= productId %>" class="text-lg font-bold hover:underline hover:underline-offset-1"><%= productId %></a>
    </div>
</div>

<div class="flex flex-col h-screen justify-between font-poppins lg:ml-72">
    <div class="h-auto m-[30px] bg-white rounded-md shadow-md overflow-hidden">

        <div class="h-auto bg-gray-800 shadow-sm p-4">
            <h2 class="text-white font-bold">Ubah data Potato Wedges</h2>
        </div>

        <div class="h-auto p-4">
            <form action="">
                <div class="h-auto flex flex-col mb-3">
                    <label class="mb-1" for="email">ID Produk</label>
                    <input type="email" class="border rounded-md border-gray-500 p-1 pl-2 font-thin text-sm" placeholder="Masukkan id produk..">
                </div>
                <div class="h-auto flex flex-col mb-3">
                    <label class="mb-1" for="email">Nama Produk</label>
                    <input type="email" class="border rounded-md border-gray-400 p-1 pl-2 font-thin text-sm" placeholder="Masukkan nama produk..">
                </div>
                <div class="h-auto flex flex-col mb-3">
                    <label class="mb-1" for="email">Kategori Produk</label>
                    <input type="Kategori" class="border rounded-md border-gray-400 p-1 pl-2 font-thin text-sm" placeholder="Masukkan kategori produk..">
                </div>
                <div class="h-auto flex flex-col mb-3">
                    <label class="mb-1" for="email">Stok Produk</label>
                    <input type="Kategori" class="border rounded-md border-gray-400 p-1 pl-2 font-thin text-sm" placeholder="Masukkan stok produk..">
                </div>
                <div class="h-auto flex flex-col mb-3">
                    <label class="mb-1" for="email">Status Produk</label>
                    <input type="Kategori" class="border rounded-md border-gray-400 p-1 pl-2 font-thin text-sm" placeholder="Masukkan status produk..">
                </div>
            </form>
        </div>

        <div class="h-auto bg-gray-200 p-2 flex justify-end">
            <button class="px-3 py-2 rounded-md border border-red-500 text-red-500 mr-2 text-sm hover:bg-red-500 hover:text-white transition duration-200"><a href="#">Hapus Produk</a></button>
            <button class="bg-gray-700 px-3 py-2 rounded-md hover:bg-gray-900 hover:shadow-md text-white transition text-sm"><a href="">Submit</a></button>
        </div>
    </div>

    <div class="bg-gray-700 p-5 font-poppins">
        <p class="text-white m-auto text-center lg:text-left">TITIKOMA By Semicolon; Team</p>
    </div>
</div>

<%- include('../parts/footer.ejs') %>