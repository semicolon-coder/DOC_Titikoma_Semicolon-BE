<%- include('../parts/header.ejs', { title: 'Detail Produk - TITIKOMA' }) %>
<%- include('../parts/navbar.ejs') %>
<%- include('../parts/sidebar.ejs', { position: 'product' }) %>

<div class="pt-[90px] h-auto shadow-md py-3 lg:ml-72">
    <div class="mx-[30px] text-gray-800 font-light">
        <a href="/product" class="text-lg font-bold hover:underline hover:underline-offset-1">Produk</a>
        >
        <a href="/product/<%= product._id %>" class="text-lg font-bold hover:underline hover:underline-offset-1"><%= product.productId %></a>
    </div>
</div>

<div class="flex flex-col h-screen justify-between font-poppins lg:ml-72">
    <div class="h-auto m-[30px] bg-white rounded-md shadow-md overflow-auto">
        <form action="/product/<%= product._id %>/update?_method=PUT" enctype="multipart/form-data" method="post">
            <div class="h-auto bg-gray-800 shadow-sm p-4">
                <h2 class="text-white font-bold">Ubah data Potato Wedges</h2>
            </div>

            <div class="h-auto p-4 md:grid md:grid-cols-12 md:gap-2">
                <div class="h-auto flex flex-col mb-3 md:col-span-4">
                    <label class="mb-1" for="productId">ID Produk</label>
                    <input type="text" name="productId" value="<%- product.productId %>" class="border rounded-md border-gray-500 p-1 pl-2 font-thin text-sm"
                           placeholder="Masukkan id produk..">
                </div>
                <div class="h-auto flex flex-col mb-3 md:col-span-6">
                    <label class="mb-1" for="name">Nama Produk</label>
                    <input type="text" name="name" value="<%- product.name %>" class="border rounded-md border-gray-400 p-1 pl-2 font-thin text-sm"
                           placeholder="Masukkan nama produk..">
                </div>
                <div class="h-auto flex flex-col mb-3 md:col-span-2">
                    <label class="mb-1" for="status">Status</label>
                    <select type="text" name="status" class="border rounded-md border-gray-400 p-1 pl-2 font-thin text-sm" required>
                        <option value="true" <%- product.status ? 'selected' : '' %>>Tersedia</option>
                        <option value="false" <%- product.status ? '' : 'selected' %>>Habis</option>
                    </select>
                </div>
                <div class="h-auto flex flex-col mb-3 md:col-span-12">
                    <label class="mb-1" for="description">Deskripsi</label>
                    <textarea type="text" name="description" class="border rounded-md border-gray-400 p-1 pl-2 font-thin text-sm"
                              placeholder="Masukkan deskripsi produk.."><%- product.description %></textarea>
                </div>
                <div class="h-auto flex flex-col mb-3 md:col-span-4">
                    <label class="mb-1" for="category">Kategori Produk</label>
                    <select type="text" name="category" class="border rounded-md border-gray-400 p-1 pl-2 font-thin text-sm" required>
                        <% category.map(item => { %>
                            <option value="<%- item._id %>"><%- item.name %></option>
                        <% }) %>
                    </select>
                </div>
                <div class="h-auto flex flex-col mb-3 md:col-span-4">
                    <label class="mb-1" for="stock">Stok Produk</label>
                    <div class="flex flex-row justify-between">
                  <span onclick="subtraction()" class="border-y border-l border-gray-400 rounded-l-md p-1">
                    <svg class="w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 12H4"></path></svg>
                  </span>
                        <input id="stock" type="number" name="stock" value="<%- product.stock %>" class="border border-gray-400 p-1 pl-2 font-thin text-sm text-center w-full">
                        <span onclick="addition()" class="border-y border-r border-gray-400 rounded-r-md p-1" >
                    <svg class="w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"></path></svg>
                  </span>
                    </div>
                </div>
                <div class="h-auto flex flex-col mb-3 md:col-span-4">
                    <label class="mb-1" for="price">Harga</label>
                    <input type="number" name="price" value="<%- product.price %>" class="border rounded-md border-gray-400 p-1 pl-2 font-thin text-sm"
                           placeholder="Masukkan harga produk..">
                </div>
                <div class="h-auto flex flex-col mb-3 md:col-span-12">
                    <label class="mb-1" for="email">Foto produk</label>
                    <img class="w-[281px] h-[211px] rounded-lg object-cover" src="<%- product.image %>" alt="product-image">
                </div>
                <div class="h-auto flex flex-col mb-3 md:col-span-12">
                    <label class="mb-1" for="email">Ubah Foto produk</label>
                    <input type="file" name="image" class="border rounded-md border-gray-400 p-1 pl-2 font-thin text-sm" placeholder="Masukkan harga produk..">
                </div>
            </div>

            <div class="h-auto bg-gray-200 p-2 flex justify-end">
                <button formmethod="post" formaction="/product/<%- product._id %>?_method=DELETE" class="px-3 py-2 rounded-md border border-red-500 text-red-500 mr-2 text-sm hover:bg-red-500 hover:text-white transition duration-200">Hapus Produk</button>
                <button class="bg-gray-700 px-3 py-2 rounded-md hover:bg-gray-900 hover:shadow-md text-white transition text-sm">Submit</button>
            </div>
        </form>
    </div>

    <div class="bg-gray-700 p-5 font-poppins">
        <p class="text-white m-auto text-center lg:text-left">TITIKOMA By Semicolon; Team</p>
    </div>
</div>

<%- include('../parts/footer.ejs') %>